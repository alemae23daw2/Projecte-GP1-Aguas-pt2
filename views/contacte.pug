    style.
        ::-webkit-scrollbar {
            display: none;
        }

        .water-menu {
            background-color: #3498db;
            padding: 53px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 25px;
        }

        .logo {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }

        .lu {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .menu {
            margin: 0 10px;
        }

        .aa {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            position: relative;
            transition: color 0.3s ease;
        }

        .aa:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: #fff;
            visibility: hidden;
            transform: scaleX(0);
            transition: all 0.3s ease-in-out;
        }

        .aa:hover {
            color: rgb(230, 242, 153);
        }

        .aa:hover:before {
            visibility: visible;
            transform: scaleX(1);
        }

        header {
            text-align: center;
        }

        section {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 8px;
            font-size: 25px;
        }

        .input,
        .text {
            width: 100% !important;
            padding: 10px;
            margin-bottom: 15px;
            border: 4px solid black !important;
        }

        .boton {
            background-color: #3498db;
            color: #fff;
            padding: 17px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 25px;
        }

        .boton:hover {
            background-color: #2980b9;
        }

        .full-width-container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        .half-width-div {
            flex: 1;
            border: 1px solid #ccc;
            box-sizing: border-box;
            padding: 20px;
            
        }
        .half-width-div2{
            flex: 1;
            box-sizing: border-box;
            padding: 20px;
            background-image: url(Imatges/vaso.jpg);
            background-size: cover;
        }

        #foto{
            width: 800px;
        }