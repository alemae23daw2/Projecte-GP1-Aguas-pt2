extends layout

block content
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Inici
    link(rel="stylesheet", href="home.css")
    script(src="scripts.js")
    
  style.
    .perfil
      position: absolute;
      width: 10%;
      right: 4%;
      height: 50px;
      display: grid;
      justify-content: center;
      align-items: center;
      color: white;
  
    .perfil > h1
      cursor: pointer;
  
    .popup, .popup2, .popup3, .popup4
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
  
    .popup-inner
      background-color: white;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.75);
      width: 40%;
  
    .popup-inner h2
      margin-top: 0;
  
    .popup-inner label
      display: block;
      margin-bottom: 10px;
  
    .popup-inner input
      width: 100%;
      padding: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
  
    #button, #button2
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin-right: 10px;
      cursor: pointer;
      border-radius: 5px;
  
    #button2
      background-color: #f44336;
  
    #button:hover
      transform: translateY(-2px);
      background-color: #45a049;
  
    #button2:hover
      transform: translateY(-4px);
      background-color: #da190b;
  
    #conmutar, #conmutar2
      text-decoration: underline;
      cursor: pointer;

  body

    #container
      h1.titulin Arrastra el bid√≥ per omplir-lo i aixi reabastir el contenidor d'aigua
      .medidor
      img#grifo(src="Imatges/Grifo.png", style="margin-right:40px")
      img#agua(src="Imatges/agua.png")
      .recipiente
        img#bidon(src="Imatges/BidonAgua.png", draggable="true")
      .llenado
      .timer 00:00